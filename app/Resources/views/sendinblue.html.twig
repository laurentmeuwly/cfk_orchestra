{% extends 'EasyAdminBundle:default:layout.html.twig' %} 



{% block content_title %}
{% spaceless %}
   <h2>Informations Sendinblue</h2>
{% endspaceless %}
{% endblock %}

{% block main %}

<h3>Informations sur le compte</h3>
Compte au nom de: {{ account.getCompanyName() }}<br/>
{{ account.getAddress().getStreet }}, {{ account.getAddress().getZipCode() }} {{ account.getAddress().getCity() }}<br/>		
Email: {{ account.getEmail() }}<br/>


<h3>Listes disponibles</h3>
{# début de la table #}
<table width="850px">
<thead>
<tr>
	<th style="text-align: left;" width="200px">Id</th>
	<th style="text-align: left;" width="300px">Nom</th>
	<th style="text-align: left;" width="350px">Nb contacts</th>
	<th style="text-align: left;" width="350px">Nb inscrits</th>
	<th style="text-align: left;" width="350px">Nb blacklistés</th>
	<th style="text-align: left;" width="350px">Dernière newsletter</th>
</tr>
</thead>

<tbody>
{% for list in lists %}
<tr>
	<td>{{ list.id}}</td>
	<td>{{ list.name }}</td>
	<td>{{ list.totalSubscribers + list.totalBlacklisted }}</td>
	<td>{{ list.totalSubscribers }}</td>
	<td>{{ list.totalBlacklisted }}</td>
</tr>
{%  endfor %}
</tbody>

</table>
{# fin de la table #}



{% endblock %}